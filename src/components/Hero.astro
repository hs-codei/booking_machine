---
import { siteConfig } from '../../site.config';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge animate-hero stagger-1">
        <span class="stars">★★★★★</span>
        {siteConfig.rating} Sterne · {siteConfig.reviewCount} Google-Bewertungen
      </div>

      <h1 class="animate-hero stagger-2">
        Ihre {siteConfig.tagline.split(' ')[0]} in <em>{siteConfig.address.district}</em>
      </h1>

      <p class="hero-subtitle animate-hero stagger-3">
        Individuelle Behandlung durch erfahrene Therapeuten. Manuelle Therapie, Krankengymnastik und Sportphysiotherapie — mit Herz und Kompetenz. Alle Kassen und Privat.
      </p>

      <div class="hero-actions animate-hero stagger-4">
        <a href={`tel:${siteConfig.phoneTel}`} class="btn btn-primary">
          <svg viewBox="0 0 24 24"><path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1.003 1.003 0 011.01-.24c1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.1.31.03.66-.25 1.02l-2.2 2.2z"/></svg>
          {siteConfig.phone}
        </a>
        <a href="/termin" class="btn btn-secondary">Online buchen</a>
      </div>

      <div class="hero-trust-strip animate-hero stagger-5">
        <div class="trust-item">
          <svg viewBox="0 0 24 24"><path d="M12 2L3 7v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-9-5z"/></svg>
          Seit {siteConfig.yearFounded}
        </div>
        <div class="trust-item">
          <svg viewBox="0 0 24 24"><path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/></svg>
          {siteConfig.teamSize} Therapeuten
        </div>
        <div class="trust-item">
          <svg viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 3c1.93 0 3.5 1.57 3.5 3.5S13.93 13 12 13s-3.5-1.57-3.5-3.5S10.07 6 12 6zm7 13H5v-.23c0-.62.28-1.2.76-1.58C7.47 15.82 9.64 15 12 15s4.53.82 6.24 2.19c.48.38.76.97.76 1.58V19z"/></svg>
          Alle Kassen
        </div>
      </div>
    </div>

    <div class="hero-image animate-hero-image">
      <div class="hero-image-wrapper">
        <img src="/images/hero.jpg" alt="Moderne Physiotherapie-Praxis" loading="eager" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: clamp(3rem, 10vw, 5rem) 0;
    background: linear-gradient(165deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -100px;
    right: -100px;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: var(--color-primary);
    opacity: 0.03;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  /* Hero animations */
  .animate-hero {
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.6s ease forwards;
  }

  .stagger-1 { animation-delay: 0.1s; }
  .stagger-2 { animation-delay: 0.2s; }
  .stagger-3 { animation-delay: 0.3s; }
  .stagger-4 { animation-delay: 0.4s; }
  .stagger-5 { animation-delay: 0.5s; }

  @keyframes heroFadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-hero-image {
    opacity: 0;
    transform: translateX(30px);
    animation: heroSlideIn 0.8s ease 0.4s forwards;
  }

  @keyframes heroSlideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    background: var(--color-white);
    border: 1px solid var(--color-border);
    padding: 0.4rem 0.85rem;
    border-radius: 50px;
    font-size: 0.82rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1.25rem;
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.2rem);
    line-height: 1.15;
    color: var(--color-primary-dark);
    margin-bottom: 1rem;
  }

  .hero h1 em {
    font-style: normal;
    color: var(--color-accent);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2.2vw, 1.15rem);
    color: var(--color-text-light);
    margin-bottom: 2rem;
    max-width: 520px;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .hero-image-wrapper {
    border-radius: var(--border-radius);
    overflow: hidden;
    aspect-ratio: 4/3;
    background: var(--color-border);
    box-shadow: var(--shadow-lg);
  }

  .hero-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-trust-strip {
    display: flex;
    gap: 1.5rem;
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--color-border);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.82rem;
    font-weight: 500;
    color: var(--color-text-light);
  }

  .trust-item svg {
    width: 16px;
    height: 16px;
    fill: var(--color-primary);
    flex-shrink: 0;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-image {
      order: -1;
    }

    .hero-trust-strip {
      justify-content: center;
      flex-wrap: wrap;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-hero,
    .animate-hero-image {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>
