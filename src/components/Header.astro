---
import { siteConfig } from '../../site.config';
---

<header class="header">
  <div class="container">
    <a href="/" class="logo">
      {siteConfig.name}
      <span>{siteConfig.tagline}</span>
    </a>

    <nav class="main-nav">
      <a href="/#leistungen">Leistungen</a>
      <a href="/#ueber-uns">Über uns</a>
      <a href="/kontakt">Kontakt</a>
    </nav>

    <a href="/termin" class="header-cta">
      <span>Termin buchen</span>
    </a>

    <button class="mobile-menu-toggle" aria-label="Menü öffnen">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <nav class="mobile-nav">
    <a href="/#leistungen">Leistungen</a>
    <a href="/#ueber-uns">Über uns</a>
    <a href="/kontakt">Kontakt</a>
    <a href="/termin" class="btn btn-primary">Termin buchen</a>
  </nav>
</header>

<script>
  const toggle = document.querySelector('.mobile-menu-toggle');
  const mobileNav = document.querySelector('.mobile-nav');
  const header = document.querySelector('.header');

  toggle?.addEventListener('click', () => {
    header?.classList.toggle('mobile-open');
  });

  // Close menu when clicking a link
  mobileNav?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      header?.classList.remove('mobile-open');
    });
  });
</script>

<style>
  .header {
    background: var(--color-white);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    padding-bottom: 1rem;
    gap: 2rem;
  }

  .logo {
    font-family: var(--font-display);
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: var(--color-primary);
    line-height: 1.2;
    text-decoration: none;
  }

  .logo span {
    display: block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-light);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin-top: 2px;
  }

  /* Main navigation */
  .main-nav {
    display: flex;
    gap: 2rem;
    margin-left: auto;
  }

  .main-nav a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color var(--transition-base);
  }

  .main-nav a:hover {
    color: var(--color-primary);
  }

  .header-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-primary);
    color: var(--color-white) !important;
    padding: 0.65rem 1.3rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-primary);
  }

  .header-cta:hover {
    background: var(--color-primary-light);
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(43, 95, 78, 0.3);
  }

  /* Mobile menu toggle */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: all 0.3s ease;
  }

  /* Mobile nav */
  .mobile-nav {
    display: none;
    flex-direction: column;
    gap: 0;
    background: var(--color-white);
    border-top: 1px solid var(--color-border);
    padding: 1rem;
  }

  .mobile-nav a {
    padding: 0.75rem 0;
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-nav a:last-child {
    border-bottom: none;
    margin-top: 0.5rem;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .main-nav,
    .header-cta {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .header.mobile-open .mobile-nav {
      display: flex;
    }

    .header.mobile-open .mobile-menu-toggle span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .header.mobile-open .mobile-menu-toggle span:nth-child(2) {
      opacity: 0;
    }

    .header.mobile-open .mobile-menu-toggle span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
  }
</style>
