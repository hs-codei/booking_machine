---
import { siteConfig } from '../../site.config';
---

<div class="mobile-cta-bar">
  <a href={`tel:${siteConfig.phoneTel}`}>
    <svg viewBox="0 0 24 24"><path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1.003 1.003 0 011.01-.24c1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.1.31.03.66-.25 1.02l-2.2 2.2z"/></svg>
    Jetzt anrufen: {siteConfig.phone}
  </a>
</div>

<style>
  .mobile-cta-bar {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--color-primary);
    padding: 0.75rem 1rem;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  }

  .mobile-cta-bar a {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--color-white);
    font-weight: 700;
    font-size: 1.05rem;
    letter-spacing: 0.02em;
    text-decoration: none;
  }

  .mobile-cta-bar svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .mobile-cta-bar {
      display: block;
    }

    /* Add padding to body so content doesn't hide behind bar */
    :global(body) {
      padding-bottom: 60px;
    }
  }
</style>
