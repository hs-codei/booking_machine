<section class="services section" id="leistungen">
  <div class="container">
    <div class="section-label">Unsere Leistungen</div>
    <h2 class="section-title">Individuelle Therapie für Ihre Gesundheit</h2>
    <p class="section-subtitle">
      Wir behandeln Sie ganzheitlich und passen jeden Therapieplan an Ihre persönlichen Bedürfnisse an.
    </p>

    <div class="services-grid">
      {siteConfig.services.map((service, index) => (
        <div class={`service-card card animate-on-scroll stagger-${index + 1}`}>
          <div class="service-icon icon">
            <svg viewBox="0 0 24 24" set:html={icons[service.icon] || icons.hands} />
          </div>
          <h3>{service.name}</h3>
          <p>{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .service-card h3 {
    font-family: var(--font-display);
    font-size: 1.2rem;
    color: var(--color-primary-dark);
    margin: 1.25rem 0 0.5rem;
  }

  .service-card p {
    font-size: 0.92rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }
</style>
