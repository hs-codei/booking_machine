---
import { siteConfig } from '../../site.config';

const yearsOfExperience = new Date().getFullYear() - siteConfig.yearFounded;
---

<section class="social-proof">
  <div class="container">
    <div class="proof-item">
      <div class="proof-number">{yearsOfExperience}+</div>
      <div class="proof-label">Jahre Erfahrung</div>
    </div>

    <div class="proof-divider"></div>

    <div class="proof-item">
      <div class="proof-number">{siteConfig.patientsServed}</div>
      <div class="proof-label">Behandelte Patienten</div>
    </div>

    <div class="proof-divider"></div>

    <div class="proof-item">
      <div class="proof-number">{siteConfig.rating} â˜…</div>
      <div class="proof-label">Google-Bewertung</div>
    </div>

    <div class="proof-divider"></div>

    <div class="proof-item">
      <div class="proof-number">{siteConfig.teamSize}</div>
      <div class="proof-label">Therapeuten</div>
    </div>
  </div>
</section>

<style>
  .social-proof {
    background: var(--color-white);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: 1.75rem 0;
  }

  .social-proof .container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: clamp(1.5rem, 5vw, 3rem);
    flex-wrap: wrap;
  }

  .proof-item {
    text-align: center;
  }

  .proof-number {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    line-height: 1;
  }

  .proof-label {
    font-size: 0.8rem;
    color: var(--color-text-light);
    margin-top: 0.25rem;
    font-weight: 500;
  }

  .proof-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  @media (max-width: 480px) {
    .proof-divider {
      display: none;
    }

    .social-proof .container {
      gap: 1rem;
    }

    .proof-item {
      flex: 1 1 45%;
    }
  }
</style>
